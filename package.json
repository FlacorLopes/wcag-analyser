{
  "name": "wcag-analyser-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/api/**/*.{ts,tsx}": [
      "eslint --config apps/api/eslint.config.mjs --fix",
      "prettier --write"
    ],
    "apps/web/**/*.{ts,tsx,vue}": [
      "eslint --config apps/web/eslint.config.ts --fix",
      "prettier --write"
    ],
    "packages/shared/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.15",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.0.0",
    "turbo": "^2.0.0",
    "vitest": "^4.0.14"
  },
  "packageManager": "pnpm@9.0.0"
}
